{
	"name": "modul-is/orm",
	"type": "library",
	"description": "Lightweight hybrid ORM/Explorer",
	"keywords": ["php", "nette", "orm", "database"],
	"homepage": "https://github.com/modul-is/orm",
	"license": "MIT",
	"support":
	{
		"issues": "https://github.com/modul-is/orm/issues"
	},

	"require":
	{
		"php": "^8.2",
		"nette/utils": "^4.0",
		"nette/database": "^3.0",
		"nette/bootstrap": "^3.0"
	},

	"require-dev":
	{
		"tracy/tracy": "^2.7",
		"nette/tester": "^2.5",
		"nette/caching": "^3.0",
		"nette/robot-loader": "^4.0",
		"modul-is/coding-standard": "^4",
		"phpstan/phpstan": "^1"
	},

	"autoload":
	{
		"classmap": ["src/", "tests/Bootstrap.php"]
	},

	"scripts":
	{
		"test": "tester tests/ -C",
		"phpstan": "phpstan analyse --level 5 src"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
