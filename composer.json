{
	"name": "modul-is/orm",
	"type": "library",
	"description": "Lightweight hybrid ORM/Explorer",
	"keywords": ["php", "nette", "orm", "database"],
	"homepage": "https://github.com/modul-is/orm",
	"license": "MIT",
	"support":
	{
		"issues": "https://github.com/modul-is/orm/issues"
	},

	"require":
	{
		"php": "^8.0",
		"nette/utils": "^3.0",
		"nette/database": "^3.0"
	},

	"require-dev":
	{
		"tracy/tracy": "^2.6",
		"nette/tester": "^2.2",
		"nette/caching": "^3.0",
		"nette/robot-loader": "^3.0",
		"modul-is/coding-standard": "v3.x-dev",
		"phpstan/phpstan": "^0.12.8"
	},

	"autoload":
	{
		"classmap": ["src/"]
	},

	"scripts":
	{
		"test": "tester tests/ -C",
		"phpstan": "phpstan analyse --level 5 src"
	}
}
